{
  "manifest_version": 3,
  "name": "Oscar Fetch",
  "version": "1.4",
  "description": "Adds a button to YouTube pages to download videos with your local server.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}