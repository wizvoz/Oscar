{
  "manifest_version": 3,
  "name": "Oscar Fetch",
  "version": "1.2",
  "description": "Adds a button to YouTube pages to download videos with your local server.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ]
}